<?xml version="1.0"?>
<launch>
  
  <arg name="port" default="9090" />

	<include file="$(find rosbridge_server)/launch/rosbridge_websocket.launch">
		<arg name="port" value="9090" />
	</include>
  <param name="/use_sim_time" value="true" />
    <param name="robot_description" textfile="$(find navigator_package)/urdf/boat.xml"/>

<!--  RQT Graph-->
  <node name="rqt_graph" pkg="rqt_graph" type="rqt_graph" output="screen"/>
 <!--  <node pkg="tf2_ros" type="static_transform_publisher" name="laser_broadcaster" args="3.14 0 0 0 0 0 base_link base_laser" /> -->
<!--  <node name="tf2_odom_broadcaster" pkg="navigator_package" type="tf_odometry_publisher" output="screen"/>-->
<!--  <node name="tf2_laser_broadcaster" pkg="navigator_package" type="static_tf2_laser_broadcaster.py" output="screen"/>-->
  <node name="tf2_boat_broadcaster" pkg="navigator_package" type="boat_tf2_broadcaster.py" output="screen"/>
  <node name="tf2_odom_broadcaster" pkg="navigator_package" type="odom_tf2_broadcaster.py" output="screen"/>


  <node name="tf2_base_to_left_broadcaster" pkg="navigator_package"
        type="tf2_frame_broadcaster.py" output="screen" args="tf2_base_to_left_broadcaster/">
    <param name="title" value="left_balancer"/>
    <param name="parent" value="base_link"/>
    <param name="child" value="left_balancer"/>
    <param name="x_conv" value="0.7"/>
    <param name="y_conv" value="0.3"/>
    <param name="z_conv" value="0.0"/>
  </node>

  <node name="tf2_base_to_right_broadcaster" pkg="navigator_package"
        type="tf2_frame_broadcaster.py" output="screen" args="tf2_base_to_right_broadcaster/">
    <param name="title" value="right_balancer"/>
    <param name="parent" value="base_link"/>
    <param name="child" value="right_balancer"/>
    <param name="x_conv" value="0.7"/>
    <param name="y_conv" value="-0.3"/>
    <param name="z_conv" value="0.0"/>
  </node>
  <node name="tf2_base_to_rear_broadcaster" pkg="navigator_package"
        type="tf2_frame_broadcaster.py" output="screen" args="tf2_base_to_rear_broadcaster/">
    <param name="title" value="boat_rear"/>
    <param name="parent" value="base_link"/>
    <param name="child" value="boat_rear"/>
    <param name="x_conv" value="-0.8"/>
    <param name="y_conv" value="0.0"/>
    <param name="z_conv" value="0.0"/>
  </node>
  <node name="tf2_base_to_video_broadcaster" pkg="navigator_package"
        type="tf2_frame_broadcaster.py" output="screen" args="tf2_base_to_video_broadcaster/">
    <param name="title" value="video_camera"/>
    <param name="parent" value="base_link"/>
    <param name="child" value="video_camera"/>
    <param name="x_conv" value="0.4"/>
    <param name="y_conv" value="0.0"/>
    <param name="z_conv" value="0.325"/>
  </node>

  <arg name="use_tf_static" default="false"/>
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="rob_st_pub">
    <param name="use_tf_static" value="${arg use_tf_static}"/>
    <param name="robot_description" value="${arg robot_description}"/>
  </node>
 
<node name="rviz" pkg="rviz" type="rviz" args="-d $(find navigator_package)/launch/mapping.rviz"/>

<node name="slam_gmapping" pkg="gmapping" type="slam_gmapping">
  <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>
    <param name="delta" value="0.05" />
    <param name="angularUpdate" value="0.436"/>
    <param name="linearUpdate" value="0.5"/>
    <param name="output_frame_id" value="base_link"/>
  </node>


</launch>
